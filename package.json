{
  "name": "nosql-odm",
  "version": "0.2.0",
  "description": "An Object Document Mapper (ODM) for NoSQL databases, providing a simple and intuitive API for managing and querying data.",
  "keywords": [
    "data-management",
    "database",
    "nosql",
    "object-document-mapper",
    "odm",
    "querying"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./engines/memory": {
      "types": "./dist/engines/memory.d.ts",
      "import": "./dist/engines/memory.mjs",
      "require": "./dist/engines/memory.js"
    },
    "./engines/sqlite": {
      "types": "./dist/engines/sqlite.d.ts",
      "import": "./dist/engines/sqlite.mjs",
      "require": "./dist/engines/sqlite.js"
    }
  },
  "scripts": {
    "test": "bun test",
    "test:sqlite": "bun test tests/sqlite-engine.test.ts",
    "lint": "oxlint . --type-aware",
    "lint:fix": "oxlint . --type-aware --fix",
    "fmt": "oxfmt .",
    "fmt:check": "oxfmt . --check",
    "typecheck": "tsc --noEmit",
    "build": "tsdown",
    "ci:publish": "bun run build && changeset publish"
  },
  "dependencies": {
    "@standard-schema/spec": "1.1.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/better-sqlite3": "7.6.13",
    "@types/bun": "latest",
    "better-sqlite3": "12.6.2",
    "oxfmt": "0.28.0",
    "oxlint": "1.43.0",
    "oxlint-tsgolint": "0.11.5",
    "tsdown": "0.20.3",
    "zod": "4.3.6"
  },
  "peerDependencies": {
    "better-sqlite3": "^12",
    "typescript": "^5"
  }
}
